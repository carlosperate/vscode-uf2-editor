{
  "name": "uf2editor",
  "displayName": "%name%",
  "description": "%description%",
  "version": "1.11.1",
  "publisher": "ms-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosperate/vscode-uf2-editor"
  },
  "bugs": {
    "url": "https://github.com/carlosperate/vscode-uf2-editor/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.89.0-insider"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "l10n": "./l10n",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "contributes": {
    "configuration": [
      {
        "title": "%name%",
        "properties": {
          "uf2editor.inspectorType": {
            "type": "string",
            "enum": [
              "aside",
              "hover",
              "sidebar"
            ],
            "default": "aside",
            "description": "%uf2editor.inspectorType%"
          },
          "uf2editor.maxFileSize": {
            "type": "number",
            "minimum": 0,
            "default": 10,
            "description": "%uf2editor.maxFileSize%"
          },
          "uf2editor.dataInspector.autoReveal": {
            "type": "boolean",
            "default": true,
            "description": "%uf2editor.dataInspector.autoReveal%"
          },
          "uf2editor.defaultEndianness": {
            "type": "string",
            "default": "little",
            "enum": [
              "little",
              "big"
            ],
            "description": "%uf2editor.defaultEndianness%"
          },
          "uf2editor.columnWidth": {
            "type": "integer",
            "default": 16,
            "minimum": 1,
            "maximum": 512,
            "description": "%uf2editor.columnWidth%"
          },
          "uf2editor.copyType": {
            "type": "string",
            "enum": [
              "Hex Octets",
              "Hex",
              "Literal",
              "UTF-8",
              "C",
              "Go",
              "Java",
              "JSON",
              "Base64"
            ],
            "default": "Hex Octets",
            "description": "%uf2editor.copyType%"
          },
          "uf2editor.showDecodedText": {
            "type": "boolean",
            "default": true,
            "description": "%uf2editor.showDecodedText%"
          },
          "uf2editor.showOpenFileButton": {
            "type": "boolean",
            "default": false,
            "description": "%uf2editor.showOpenFileButton%"
          }
        }
      }
    ],
    "configurationDefaults": {
      "workbench.editorAssociations": {
        "{uf2diff}:/**/*.*": "uf2Editor.uf2edit"
      }
    },
    "customEditors": [
      {
        "viewType": "uf2Editor.uf2edit",
        "displayName": "%name%",
        "selector": [
          {
            "filenamePattern": "*"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "uf2Editor.openFile",
        "category": "%name%",
        "title": "%uf2Editor.openFile%",
        "icon": "$(file-binary)"
      },
      {
        "command": "uf2Editor.goToOffset",
        "category": "%name%",
        "title": "%uf2Editor.goToOffset%"
      },
      {
        "command": "uf2Editor.selectBetweenOffsets",
        "category": "%name%",
        "title": "%uf2Editor.selectBetweenOffsets%"
      },
      {
        "command": "uf2Editor.copyAs",
        "category": "%name%",
        "title": "%uf2Editor.copyAs%"
      },
      {
        "command": "uf2Editor.switchEditMode",
        "category": "%name%",
        "title": "%uf2Editor.switchEditMode%"
      },
      {
        "command": "uf2Editor.copyOffsetAsHex",
        "category": "%name%",
        "title": "%uf2Editor.copyOffsetAsHex%"
      },
      {
        "command": "uf2Editor.copyOffsetAsDec",
        "category": "%name%",
        "title": "%uf2Editor.copyOffsetAsDec%"
      },
      {
        "command": "uf2Editor.compareSelected",
        "category": "%name%",
        "title": "%uf2Editor.compareSelected%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "uf2Explorer",
          "title": "%name%",
          "icon": "panel-icon.svg",
          "when": "uf2Editor:showSidebarInspector"
        }
      ]
    },
    "views": {
      "uf2Explorer": [
        {
          "type": "webview",
          "id": "uf2Editor.dataInspectorView",
          "name": "%dataInspectorView%",
          "when": "uf2Editor:showSidebarInspector"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "uf2Editor.goToOffset",
          "when": "uf2Editor:isActive"
        },
        {
          "command": "uf2Editor.switchEditMode",
          "when": "uf2Editor:isActive"
        },
        {
          "command": "uf2Editor.compareSelected",
          "when": "false"
        }
      ],
      "editor/title": [
        {
          "command": "uf2Editor.openFile",
          "group": "navigation@1",
          "when": "activeEditor && config.uf2editor.showOpenFileButton"
        }
      ],
      "webview/context": [
        {
          "command": "uf2Editor.copyOffsetAsDec",
          "group": "9_cutcopypaste",
          "when": "uf2Editor:isActive"
        },
        {
          "command": "uf2Editor.copyOffsetAsHex",
          "group": "9_cutcopypaste",
          "when": "uf2Editor:isActive"
        },
        {
          "when": "webviewId == 'uf2Editor.uf2edit'",
          "command": "uf2Editor.copyAs",
          "group": "9_cutcopypaste"
        }
      ],
      "explorer/context": [
        {
          "command": "uf2Editor.compareSelected",
          "group": "3_compare@30",
          "when": "listDoubleSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "uf2Editor.goToOffset",
        "key": "ctrl+g",
        "when": "activeCustomEditorId == uf2Editor.uf2edit"
      },
      {
        "command": "uf2Editor.copyAs",
        "key": "alt+ctrl+c",
        "when": "activeCustomEditorId == uf2Editor.uf2edit"
      },
      {
        "command": "uf2Editor.switchEditMode",
        "key": "Insert",
        "when": "uf2Editor:isActive"
      }
    ]
  },
  "scripts": {
    "compile": "tsc --noEmit && node .esbuild.config.js",
    "lint": "eslint src --ext ts",
    "fmt": "prettier --write \"{src,media,shared}/**/*.{ts,tsx}\" && npm run lint -- --fix",
    "watch": "node .esbuild.config.js --watch",
    "test": "tsc --noEmit && node ./src/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/diff": "^5.2.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vscode/test-electron": "^2.3.9",
    "chai": "^4.3.4",
    "esbuild": "^0.19.0",
    "esbuild-css-modules-plugin": "^3.1.0",
    "esbuild-plugin-svgr": "^2.1.0",
    "eslint": "^8.56.0",
    "mocha": "^11.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@vscode/codicons": "0.0.27",
    "cockatiel": "^3.1.2",
    "diff": "^5.2.0",
    "js-base64": "^3.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-popper": "^2.3.0",
    "recoil": "^0.7.7",
    "vscode-webview-tools": "^0.1.1"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "avoid"
  }
}
